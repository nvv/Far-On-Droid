<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/panels"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/panelsSelector"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/panelsSelector"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/bottomBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panels">

        <View
            android:id="@+id/leftPanelSelector"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_weight="0.5"
            android:background="@color/yellow" />

        <View
            android:id="@+id/rightPanelSelector"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_weight="0.5"
            android:background="@color/grey_button" />

    </LinearLayout>

    <com.openfarmanager.android.filesystempanel.view.BottomBar
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/panelsSelector" />


</androidx.constraintlayout.widget.ConstraintLayout>